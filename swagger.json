{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0",
    "description": "Documentação da API usando Swagger e JSON"
  },
  "paths": {
    "/users/create": {
      "post": {
        "summary": "Cria um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "telephone": { "type": "string" },
                  "address": {
                    "type": "object",
                    "properties": {
                      "street": { "type": "string" },
                      "reference": { "type": "string" },
                      "local": { "type": "string" },
                      "number": { "type": "string" }
                    },
                    "required": ["reference", "local"]
                  }
                },
                "required": [
                  "username",
                  "email",
                  "password",
                  "telephone",
                  "address"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Erro de validação"
          }
        }
      }
    },
    "/users/profile": {
      "get": {
        "summary": "Obtém o perfil do usuário autenticado",
        "tags": ["Users"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer <seu_token_aqui>"
            },
            "description": "Token JWT para autenticação"
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o perfil do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "id": {
                      "type": "integer"
                    },
                    "notificationTokens": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "token": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "isAdmin": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      },
      "put": {
        "summary": "Atualiza o perfil do usuário autenticado",
        "tags": ["Users"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer <seu_token_aqui>"
            },
            "description": "Token JWT para autenticação"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "telephone": {
                    "type": "string"
                  },
                  "address": {
                    "$ref": "#/components/schemas/AddressDates"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Perfil atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Perfil atualizado com sucesso"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição malformada"
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      }
    },
    "/stock/profile": {
      "get": {
        "summary": "Obtém os itens de estoque",
        "tags": ["Stock"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna os itens de estoque",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "value": { "type": "number" },
                      "name": { "type": "string" },
                      "created_at": { "type": "string", "format": "date-time" },
                      "updated_at": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "summary": "Cria um novo pedido",
        "tags": ["Orders"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "waterAmount": { "type": "number" },
                  "gasAmount": { "type": "number" }
                },
                "required": ["waterAmount", "gasAmount"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pedido criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "user_id": { "type": "integer" },
                    "status": { "type": "string" },
                    "gasAmount": { "type": "number" },
                    "waterAmount": { "type": "number" },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" },
                    "total": { "type": "number" },
                    "address": {
                      "type": "object",
                      "properties": {
                        "street": { "type": "string" },
                        "reference": { "type": "string" },
                        "local": { "type": "string" },
                        "number": { "type": "string" }
                      }
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "username": { "type": "string" },
                        "telephone": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
